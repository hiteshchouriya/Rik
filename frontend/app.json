{
  "expo": {
    "name": "Rik - Life Coach",
    "slug": "rik-life-coach",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "rik",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rik.lifecoach",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Rik needs microphone access for voice commands and wake word detection",
        "NSSpeechRecognitionUsageDescription": "Rik uses speech recognition to understand your voice commands",
        "UIBackgroundModes": ["audio"]
      }
    },
    "android": {
      "package": "com.rik.lifecoach",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0a0a0f"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.FOREGROUND_SERVICE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0a0a0f"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Rik tracks your location to remind you based on where you are"
        }
      ],
      [
        "@react-native-voice/voice",
        {
          "microphonePermission": "Rik needs microphone access for voice commands",
          "speechRecognitionPermission": "Rik uses speech recognition to understand your commands"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "rik-life-coach"
      }
    },
    "owner": "your-expo-username"
  }
}
